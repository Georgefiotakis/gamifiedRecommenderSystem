<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<!-- custom tiles schema definition to make the app work off-line
, normally uses web dtd: http://tiles.apache.org/dtds/tiles-config_2_0.dtd -->
<tiles-definitions>

    <!-- *********************************** Basic Templates *********************************** -->

    <definition name=".mainLeftSidebarTemplate" template="/WEB-INF/viewsTemplates/leftSidebar/main.jsp">
        <put-attribute name="title" value="NobelGrid - Visual Analytics Tool" type="string" />
        <put-attribute name="header" value="/WEB-INF/viewsTemplates/leftSidebar/header.jsp" />
        <put-attribute name="body" value="" />
    </definition>

    <!-- *********************************** Home Controller *********************************** -->

    <definition name="dashboard" extends=".mainLeftSidebarTemplate">
        <put-attribute name="body" value="/WEB-INF/views/dashboard.jsp" />
    </definition>

    <definition name="userProfile" extends=".mainLeftSidebarTemplate">
        <put-attribute name="body" value="/WEB-INF/views/userProfile.jsp" />
    </definition>

    <definition name="greenPlanet" extends=".mainLeftSidebarTemplate">
        <put-attribute name="body" value="/WEB-INF/views/greenPlanet.jsp" />
    </definition>

    <definition name="purplePlanet" extends=".mainLeftSidebarTemplate">
        <put-attribute name="body" value="/WEB-INF/views/purplePlanet.jsp" />
    </definition>

    <definition name="orangePlanet" extends=".mainLeftSidebarTemplate">
        <put-attribute name="body" value="/WEB-INF/views/orangePlanet.jsp" />
    </definition>

    <definition name="studentRecommendation" extends=".mainLeftSidebarTemplate">
        <put-attribute name="body" value="/WEB-INF/views/studentRecommendation.jsp" />
    </definition>

    <definition name="analytics" extends=".mainLeftSidebarTemplate">
        <put-attribute name="body" value="/WEB-INF/views/analytics.jsp" />
    </definition>

</tiles-definitions>
